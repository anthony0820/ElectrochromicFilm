<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Window Selection"
        android:textColor="#040404"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/front_driver_window"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:background="@drawable/drivers_front_design"
        app:layout_constraintBottom_toTopOf="@+id/back_driver_window"
        app:layout_constraintEnd_toStartOf="@+id/front_passenger_window"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/back_driver_window"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:background="@drawable/drivers_back_design"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/back_passenger_window"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/front_driver_window" />

    <ImageView
        android:id="@+id/back_passenger_window"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:background="@drawable/passengers_back_design"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/back_driver_window"
        app:layout_constraintTop_toBottomOf="@+id/front_passenger_window" />

    <ImageView
        android:id="@+id/front_passenger_window"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:background="@drawable/passengers_front_design"
        app:layout_constraintBottom_toTopOf="@+id/back_passenger_window"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/front_driver_window"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="229dp" />

</androidx.constraintlayout.widget.ConstraintLayout>